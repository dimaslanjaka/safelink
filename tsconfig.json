{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "outDir": "dist",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "strict": false
    }
  }
}