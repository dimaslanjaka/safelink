{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist/libs",
		"rootDirs": [
			"src",
			"packages"
		],
		"moduleResolution": "Node",
		"declaration": true,
		"removeComments": false,
		"allowJs": true,
		"checkJs": false,
		"inlineSources": true,
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"downlevelIteration": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src"
		],
		"types": [
			"node"
		],
		"target": "ES6",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020"
		]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"dist",
		"tests",
		"node_modules",
		"./dist/release/*.js",
		"./dist/**/*.js"
	],
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs"
	}
}