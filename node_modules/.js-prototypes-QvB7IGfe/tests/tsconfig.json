{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "experimentalDecorators": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnusedLabels": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "inlineSources": false,
    "allowJs": true,
    "checkJs": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES7",
      "DOM.Iterable",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "outDir": "./build",
    "downlevelIteration": true,
    "rootDirs": [
      "./",
      "../"
    ],
    "noLib": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "../src"
    ],
    "types": [
      "node"
    ]
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "include": [
    "./*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "typeRoots": [
        "../src"
      ],
    }
  }
}